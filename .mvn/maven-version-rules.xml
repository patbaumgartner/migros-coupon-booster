<?xml version="1.0" encoding="UTF-8"?>
<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 
         https://mojo.codehaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd">

  <!-- Ignore pre-release versions -->
  <ignoreVersions>
    <ignoreVersion type="regex">.*-alpha.*</ignoreVersion>
    <ignoreVersion type="regex">.*-beta.*</ignoreVersion>
    <ignoreVersion type="regex">.*-rc.*</ignoreVersion>
    <ignoreVersion type="regex">.*-M.*</ignoreVersion>
    <ignoreVersion type="regex">.*-milestone.*</ignoreVersion>
    <ignoreVersion type="regex">.*-SNAPSHOT.*</ignoreVersion>
    <ignoreVersion type="regex">.*-preview.*</ignoreVersion>
    <ignoreVersion type="regex">.*-ea.*</ignoreVersion>
  </ignoreVersions>

  <!-- Spring Boot should be updated carefully -->
  <rules>
    <rule groupId="org.springframework.boot" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-SNAPSHOT</ignoreVersion>
        <ignoreVersion type="regex">.*-M.*</ignoreVersion>
        <ignoreVersion type="regex">.*-RC.*</ignoreVersion>
      </ignoreVersions>
    </rule>
  </rules>
</ruleset>
